                                                               class=" btn knopka btn-light waves-effect btn-sm ">
                                                            Трейлер
                                                       </button>
                                                  </div>
                                                  <div class="col-sm-6 ">
                                                       <a href="@Url.Action("Film", new { @filmId = film.Id })" class="shrift">О фильме</a>
                                                  </div>
                                             </div>
                                        </div>
                                        <div class="view zoom vpered ">

                                             <img src="@imageUrl" class="img-fluid" alt="Not found">
                                             <div class="mask flex-center">
                                                  <div class="name">
                                                       @film.Name (RU)<br>
                                                       <span class="span1">Аудио:</span>
                                                       <span class="span2">Руc </span>
                                                  </div>
                                             </div>

                                        </div>

                                   </div>
                              }
                         </div>
                    }
               }
