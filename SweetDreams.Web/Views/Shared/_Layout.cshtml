<!DOCTYPE html>

<html>
<head>
     <meta name="viewport" content="width=device-width" />
     <title>Наш кинотеатр | @ViewBag.Title</title>

     <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">

     <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" type="text/css">
     @Styles.Render("~/bundles/bootstrap/css")
     @Styles.Render("~/bundles/mdbootstrap/css")
     @Styles.Render("~/bundles/style/css")
     @Styles.Render("~/bundles/fa/css")


     @if (IsSectionDefined("Styles"))
     {@RenderSection("Styles", required: false)}
</head>
<body>
     <header>
          @Html.Partial("_Navbar")
          <div id="intro" class="view">
               <div class="mask rgba-black-strong">
                    <div class="container-fluid d-flex align-items-center justify-content-center h-100">
                         <div class="row d-flex justify-content-center text-center">
                              <div class="col-md-10">
                                   <h2 class="display-4 font-weight-bold white-text pt-5 mb-2">
                                        PATRIA "Sweet Dreams"
                                   </h2>
                                   <hr class="hr-light">
                                   <h4 class="white-text my-4">
                                        Новый современный кинотеатр, первый в Молдове с поддержкой IMAX
                                        3D
                                   </h4>
                                   <a href="AboutUs.html" class="btn btn-outline-white waves-effect waves-light">
                                        Читать
                                        <i class="fa fa-book"></i>
                                   </a>
                              </div>
                         </div>
                    </div>
               </div>
          </div>
     </header>
     <main>
          @RenderBody()
     </main>
     @Html.Partial("_Footer")
     <iframe allowfullscreen class="video" id="videoAlita" width="800" height="600"
             src="">
     </iframe>

     <div class="background"></div>
     @Scripts.Render("~/bundles/jquery")
     @Scripts.Render("~/bundles/popper/js")
     @Scripts.Render("~/bundles/bootstrap/js")
     @Scripts.Render("~/bundles/mdbootstrap/js")
     @Scripts.Render("~/bundles/main/js")

</body>
</html>
